<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView_beneficiaryCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="65dp"
            android:text="MYR 189"
            android:textColor="@android:color/black"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textView_ordered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView_beneficiaryCountry"
            android:layout_marginTop="36dp"
            android:text="June 12, 2018"
            android:textColor="@android:color/black"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textView_orderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/imageView_seeMore"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_see"
            tools:ignore="RtlCompat,VectorDrawableCompat" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#cccccc"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>